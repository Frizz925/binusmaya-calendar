{
    "env": {
        "es6": true,
        "node": true,
        "browser": true,
        "jquery": true,
        "mocha": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "module",
    },
    "rules": {
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-console": 0,
    },
    "plugins": [
        "mocha"
    ]
}
